# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# RabbitMQ Configuration
RABBITMQ_HOST=rag-rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=your_rabbitmq_user_here
RABBITMQ_PASS=your_rabbitmq_password_here

# Qdrant Configuration
QDRANT_HOST=rag-qdrant
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=school_documents

# Redis Configuration (for Celery backend)
REDIS_HOST=rag-redis
REDIS_PORT=6379
REDIS_DB=0

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# Celery Configuration

CELERY_BROKER_URL=amqp://your_rabbitmq_user_here:your_rabbitmq_password_here@rag-rabbitmq:5672//
CELERY_RESULT_BACKEND=redis://rag-redis:6379/0

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost/api
NEXTAUTH_URL=http://localhost

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_KEY=your_supabase_anon_key_here
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_service_key_here

# OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
KAKAO_CLIENT_ID=your_kakao_client_id_here
KAKAO_CLIENT_SECRET=your_kakao_client_secret_here
NEXTAUTH_SECRET=your_nextauth_secret_here

# Admin Credentials
ADMIN_USERNAME=your_admin_username_here
ADMIN_PASSWORD=your_admin_password_here

# Domain & SSL Configuration
DOMAIN_NAME=your_domain_here
SSL_EMAIL=your_email_here
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost

# Backend URL for API proxy
BACKEND_URL=http://localhost:8000